<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:layout_marginStart="@dimen/_12ssp"
    android:layout_marginEnd="@dimen/_12ssp"
    android:padding="5dp"
    android:id="@+id/layoutDeleteNoteContainer"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textDeleteNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="Add Friend"
        android:textColor="@color/red_dif"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand"
        android:gravity="start"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDeleteNoteHeading" />

    <TextView
        android:id="@+id/deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="Deny"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorDelete"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dialog_txt"
        app:layout_constraintTop_toBottomOf="@id/dialog_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="Accept"
        android:layout_marginEnd="15dp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_txt"
        app:layout_constraintTop_toBottomOf="@id/dialog_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>